{% schema %}
  {
    "name": "Responsive Header",
    "tag": "header",
    "class": "responsive-header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "text",
        "id": "announcement",
        "label": "Announcement Text",
        "default": "Free shipping on orders over $50"
      },
      {
        "type": "link_list",
        "id": "main_menu",
        "label": "Main Menu"
      },
      {
        "type": "text",
        "id": "cta_label",
        "label": "CTA Button Label",
        "default": "Take the Quiz"
      }, {
        "type": "url",
        "id": "cta_link",
        "label": "CTA Button Link"
      }
    ],
    "presets": [
      {
        "name": "Responsive Header"
      }
    ]
  }
{% endschema %}

<style>
  .responsive-header-wrapper {
    border-bottom: 1px solid #eee;
    font-family: sans-serif;
  }

  .announcement-bar {
    background-color: #2c5f2d;
    color: white;
    text-align: center;
    padding: 6px 12px;
    font-size: 0.875rem;
  }

  .header-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 24px;
    background-color: white;
  }

  .header-logo img {
    max-height: 48px;
  }

  .nav-links {
    display: flex;
    gap: 24px;
    align-items: center;
  }

  .nav-links a {
    text-decoration: none;
    color: #333;
    font-weight: 500;
  }

  .cta-button {
    background: #2c5f2d;
    color: white;
    padding: 10px 20px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
  }

  .menu-toggle {
    display: none;
    font-size: 1.5rem;
    cursor: pointer;
  }

  @media(max-width: 768px) {
    .menu-toggle {
      display: block;
    }

    .nav-links {
      display: none;
      flex-direction: column;
      background: white;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      z-index: 99;
      padding: 16px;
      border-top: 1px solid #eee;
    }

    .nav-links.show {
      display: flex;
    }

    .header-inner {
      flex-direction: row;
      justify-content: space-between;
    }

    .header-logo {
      flex: 1;
    }

    .nav-links a {
      padding: 10px 0;
    }
  }
</style>

<div class="responsive-header-wrapper">
  {% if section.settings.announcement != blank %}
    <div class="announcement-bar">{{ section.settings.announcement }}</div>
  {% endif %}

  <div class="header-inner">
    <div class="header-logo">
      {% if section.settings.logo %}
        <a href="/">
          <img
            src="{{ section.settings.logo | image_url: width: 300 }}"
            alt="Site logo"
            width="{{ section.settings.logo.width }}"
            height="{{ section.settings.logo.height }}">
        </a>
      {% else %}
        <a href="/" style="font-size: 1.5rem; font-weight: bold;">Your Store</a>
      {% endif %}

    </div>

    <div class="menu-toggle" id="menu-toggle">&#9776;</div>

    <nav class="nav-links" id="nav-menu">
      {% if section.settings.main_menu != blank %}
        {% assign menu = linklists[section.settings.main_menu] %}
        {% for link in menu.links %}
          <a href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
      {% endif %}
      {% if section.settings.cta_label != blank %}
        <a href="{{ section.settings.cta_link }}" class="cta-button">{{ section.settings.cta_label }}</a>
      {% endif %}
    </nav>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const toggle = document.getElementById("menu-toggle");
    const menu = document.getElementById("nav-menu");
    toggle.addEventListener("click", function() {
      menu.classList.toggle("show");
    });
  });
</script>