{% schema %}
  {
    "name": "Hero Section",
    "tag": "section",
    "class": "hero-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "background_image_alt",
        "label": "Background Image Alt Text",
        "default": "Lush indoor plants in a modern room"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Discover Your Perfect Plant ðŸŒ¿"
      },
      {
        "type": "textarea",
        "id": "subheading",
        "label": "Subheading",
        "default": "Expertly selected greenery to match your lifestyle"
      }, {
        "type": "text",
        "id": "primary_cta_label",
        "label": "Primary CTA Label",
        "default": "Shop Bestsellers"
      }, {
        "type": "url",
        "id": "primary_cta_link",
        "label": "Primary CTA Link"
      }
    ],
    "presets": [
      {
        "name": "Responsive Hero",
        "category": "Custom"
      }
    ]
  }
{% endschema %}

<section
  class="hero"
  role="region"
  aria-label="Featured promotion">
  <div class="hero-image-wrapper">
    {% if section.settings.background_image %}
      <img
        src="{{ section.settings.background_image | image_url: width: 1600 }}"
        alt="{{ section.settings.background_image_alt | escape }}"
        class="hero-bg"
        loading="lazy"
        width="1600"
        height="900">
    {% endif %}
    <div class="hero-content">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>
      {% if section.settings.primary_cta_link != blank %}
        <a href="{{ section.settings.primary_cta_link }}" class="cta-button">
          {{ section.settings.primary_cta_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    width: 100%;
    overflow: hidden;
  }
  .hero-image-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }
  .hero-bg {
    width: 100%;
    height: auto;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
  }
  .hero-content {
    padding: 2rem 1.5rem;
    max-width: 800px;
    color: white;
    z-index: 2;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  }
  .hero h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  .hero p {
    font-size: 1.125rem;
    margin-bottom: 1.5rem;
  }
  .cta-button {
    background-color: #1a1a1a;
    color: #9c6161;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: background 0.2s ease-in-out;
  }
  .cta-button:hover,
  .cta-button:focus {
    background-color: #333;
  }

  @media(min-width: 768px) {
    .hero h1 {
      font-size: 2.5rem;
    }
    .hero p {
      font-size: 1.25rem;
    }
    .hero-content {
      padding: 4rem;
    }
  }
</style>