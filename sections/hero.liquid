{% schema %}
  {
    "name": "Hero Banner",
    "tag": "section",
    "class": "hero-section",
    "max_blocks": 1,
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Welcome to Our Plant Shop"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Find the perfect plant for your space"
      },
      {
        "type": "url",
        "id": "cta_link",
        "label": "CTA Link"
      }, {
        "type": "text",
        "id": "cta_label",
        "label": "CTA Text",
        "default": "Shop Now"
      }
    ],
    "blocks": [],
    "presets": [
      {
        "name": "Hero Banner",
        "category": "Custom",
        "settings": {
          "heading": "Welcome to Our Plant Shop",
          "subheading": "Find the perfect plant for your space",
          "cta_label": "Shop Now"
        }
      }
    ]
  }
{% endschema %}

{% style %}
  .hero-section {
    position: relative;
    text-align: center;
    color: white;
    padding: 80px 20px;
    background-size: cover;
    background-position: center;
  }
  .hero-section .hero-content {
    max-width: 600px;
    margin: 0 auto;
  }
  .hero-section .hero-cta {
    margin-top: 20px;
    display: inline-block;
    background: #2c5f2d;
    color: white;
    padding: 12px 24px;
    border-radius: 6px;
    text-decoration: none;
  }
  @media screen and (max-width: 768px) {
    .hero-section {
      padding: 60px 10px;
    }
  }
{% endstyle %}

{% assign bg = section.settings.background_image | image_url: width: 2000 %}
<section class="hero-section" style="background-image: url({{ bg }})">
  <div class="hero-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    {% if section.settings.cta_link != blank %}
      <a class="hero-cta" href="{{ section.settings.cta_link }}">{{ section.settings.cta_label }}</a>
    {% endif %}
  </div>
</section>